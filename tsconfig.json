{
	"compilerOptions": {
		"target": "es2017",
		"lib": ["es2016"],
		"module": "commonjs",
		"moduleResolution": "node",
		"sourceMap": true,
		"outDir": "lib",
		"declaration": true,
		"allowUnreachableCode": false,
		"allowUnusedLabels": false,
		"noImplicitReturns": true,
		"noUnusedLocals": true,
		"noImplicitAny": true,
		"strictNullChecks": false
	},
	"include": [
		"src/**/*.ts"
	]
}
